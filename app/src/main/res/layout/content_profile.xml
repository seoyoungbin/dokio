<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dokio.tacademy.pedokio.com.dokio.tacademy.pedokio.MainActivity"
    android:orientation="vertical"
    android:background="#e2e2e2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dog"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="유저 ID"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="님 환영합니다"
                android:textSize="10sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_profile"
                    android:text="로그아웃"
                    android:textSize="8sp"
                    android:textColor="#aaaaaa"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>




        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/petupload"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_profile"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dogbtn"
                android:padding="7dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="반려견등록"
                android:textColor="#000000"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_profile"
            android:layout_marginLeft="8dp"
            android:id="@+id/starbtn">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star"
                android:padding="7dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:textColor="#000000"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_profile"
            android:layout_marginLeft="8dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/talk"
                android:padding="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내후기"
                android:textColor="#000000"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_profile"
            android:id="@+id/memobtn">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/garbage"
                android:padding="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메모작성"
                android:textColor="#000000"
                android:gravity="center"/>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/anglecircle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="공지사항"
            android:gravity="center"
            android:textSize="18sp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/anglecircle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="설정"
            android:gravity="center"
            android:textSize="18sp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/anglecircle_mypage_top">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="정보"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="#000000"/>


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"></LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="버전정보"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="18sp"
             />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"></LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="이용약관"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="18sp"
             />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"></LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/anglecircle_mypage_bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="개인정보처리방침"
            android:gravity="center_vertical"
            android:textSize="18sp"

            android:paddingLeft="5dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>
    </FrameLayout>
    </LinearLayout>



</LinearLayout>
