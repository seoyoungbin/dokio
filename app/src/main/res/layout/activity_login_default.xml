<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e2e2e2">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#FFFFFF"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            android:text="로그인이 필요한 서비스입니다."
            android:textSize="15sp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button_profile"
            android:text="로그인"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="5dp"
            android:id="@+id/loginbtn"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/anglecircle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="공지사항"
            android:gravity="center"
            android:textSize="18sp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/anglecircle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="설정"
            android:gravity="center"
            android:textSize="18sp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:padding="18dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/anglecircle_mypage_top">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="정보"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"/>


        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"></LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="버전정보"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/arrow"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:padding="18dp"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"></LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="이용약관"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/arrow"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:padding="18dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"></LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/anglecircle_mypage_bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="개인정보처리방침"
                android:gravity="center_vertical"
                android:textSize="18sp"

                android:paddingLeft="5dp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/arrow"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:padding="18dp"/>
        </FrameLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
