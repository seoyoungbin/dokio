<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dokio.tacademy.pedokio.PetListActivity"
    android:orientation="vertical"
    android:weightSum="616">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="#535353"
        android:elevation="7dp"
        android:orientation="vertical"
        android:weightSum="56">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="48"
            android:orientation="horizontal"
            android:weightSum="360">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"
                android:background="#00000000"
                android:src="@drawable/backicon"
                android:id="@+id/backbtn"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="249"
                android:gravity="center_vertical"
                android:text="반려견목록"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/garbage_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"
                android:src="@drawable/garbage_btn"
                android:background="#00000000"></ImageButton>
            <TextView
                android:id="@+id/garbage_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"
                android:text="삭제"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:gravity="center"
                android:visibility="gone"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="560"
        android:weightSum="560">

        <ListView
            android:id="@+id/petlistview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="512"
            android:divider="#ffffff"></ListView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="48"
            android:background="#ef5350"
            android:textColor="#FFFFFF"
            android:text="추가하기"/>
    </LinearLayout>

</LinearLayout>
