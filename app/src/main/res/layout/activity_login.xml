<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dokio.tacademy.pedokio.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/background_login">

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/backicon"
        android:background="#00000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="298dp"
            android:gravity="center">
        <LinearLayout

            android:layout_width="328dp"
            android:layout_height="43dp"
            android:background="@drawable/edit_login"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/id_icon"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="아이디"
                android:textSize="13sp"
                android:textColor="#bfbfbf"
                android:background="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="328dp"
            android:layout_height="43dp"
            android:background="@drawable/edit_login"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lock_icon"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="비밀번호"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:textColor="#bfbfbf"
                android:background="@null"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="400dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="16dp">
            <Button
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:background="@drawable/button_login"
                android:text="회원가입"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:id="@+id/signupbtn"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="16dp"
                >
            <Button
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="로그인"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_login"
                android:id="@+id/lbtn"

                />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="530dp"
            android:gravity="center"
            >
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/ficon"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/kakaoicon"
                android:layout_marginLeft="15dp"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/nicon"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>


    </RelativeLayout>

